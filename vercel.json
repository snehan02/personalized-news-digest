{
  "version": 2,

  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/dailyDigest.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    }
  ],

  "crons": [
    {
      "path": "/api/cron/dailyDigest",
      "schedule": "30 2 * * *"
    }
  ]
}
